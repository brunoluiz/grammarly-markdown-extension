{
  "manifest_version": 2,
  "name": "Grammarly to Markdown",
  "description": "ðŸ–‹ Convert Grammarly to Markdown, sending it to Clipboard",
  "author": "Bruno Luiz Silva <contact@brunoluiz.net>",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://app.grammarly.com/*"],
      "all_frames": true,
      "js":      ["scripts/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "action.html",
    "default_icon": {
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "https://app.grammarly.com/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
